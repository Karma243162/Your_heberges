{% extends 'base.html.twig' %}


{% block title %}Accueil
{% endblock %}

{% block stylesheets %}
{{parent()}}

{% endblock %}

{% block body %}

<div class="" id="first-page"> 
    <div id="first-page-left">
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
        <h1>Tout ce dont vous avez besoin pour créer un site web </h1>
        {% else %}
        <h1>Tout ce dont vous avez besoin pour créer un site web {{app.user.name}} </h1>

        {% endif %}
        <p class="mt-3">Jusqu'à <span>- 50 % </span>sur nos plans d’hébergement avec le code <a href="#"><span>%YOUR_HEBERGE%</span></a></p>

        <p id="first-page-price"><span>2.99€</span>/mois</p>
        
        <p style="text-transform: uppercase;">+ 1 mois totalement <span> gratuite</span> !!</p>
     
        <button>PROFITER DE L OFFRE</button>
        <p style="margin-top: 10px;">Garantie de remboursement de 30 jours</p>
    </div>

    <div id="first-page-right">
        <img style="max-width: 900px;" src="/yourheberge/public/images/presentation-page-1.jpg" alt="">
    </div>

</div>


<section style="color: #000; background-color: #f3f2f2;">
    <h1 class="text-center text-primary mt-4 pt-4 display-4 fw-bold">Quelle que avis</h1>
        {% for i in avis %}
            

            <div class="container py-5">
              <div class="row d-flex justify-content-center">
                <div class="col-md-10 col-xl-8 text-center">
               
             
                </div>
              </div>
          
              <div class="row text-center">
                <div class="col-md-4 mb-4 mb-md-0">
                  <div class="card">
                    <div class="card-body py-4 mt-2">
                      <div class="d-flex justify-content-center mb-4">
                        <i  class="bi bi-person-circle rounded-circle shadow-1-strong "></i>
                      </div>
                      <h5 class="font-weight-bold">{{i.name}}</h5>
                      <h6 class="font-weight-bold my-3">{{i.email}}</h6>
                      <ul class="list-unstyled d-flex justify-content-center">
                        <li>
                          <i class="fas fa-star fa-sm text-info"></i>
                        </li>
                        <li>
                          <i class="fas fa-star fa-sm text-info"></i>
                        </li>
                        <li>
                          <i class="fas fa-star fa-sm text-info"></i>
                        </li>
                        <li>
                          <i class="fas fa-star fa-sm text-info"></i>
                        </li>
                        <li>
                          <i class="fas fa-star-half-alt fa-sm text-info"></i>
                        </li>
                      </ul>
                      <p class="mb-2">
                        <i class="fas fa-quote-left pe-2"></i>{{i.commentaire}}
                      </p>
                    </div>
                  </div>
                </div>
               


  {% endfor %}
</section>

{% endblock %}

