            <td>{{ item.webheberge.name }}</td>
            <td>{{ item.webheberge.price }} €</td>
            <td>
            {#   <a href="{{ path('cart_remove', {id: item.id}) }}">Supprimer</a> #}
            </td>
          </tr>
        {% endfor %}
        <tr>
          <td colspan="3">Total :</td>
   
          <td></td>
        </tr>
      </tbody>
    </table>

  
 




   
{% endblock %}